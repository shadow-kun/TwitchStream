<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Twitch Chat</name>
    <author>Daniel Johnson</author>
    <version>1.0.0</version>
    <description>A module to see the chat of a twitch channel</description>
    <files>
        <filename>mod_twitchchat.xml</filename>
        <filename module="mod_twitchchat">mod_twitchchat.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="streamer"
					type="text"
				/>
			</fieldset>
		</fields>
    </config>
</extension>